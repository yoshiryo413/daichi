

<div class="show__contents">
  <div class="show__content">
    <div class="show__body">
      <div class="show__content__title">日報</div>
      <div class="show__edit">
        <% if user_signed_in? && current_user.id == @post.user_id %>
          <%= link_to "編集", edit_post_path(@post.id), class: "show__edit__btn"%>
          <%= link_to "削除", post_path(@post.id), method: :delete, class: "show__edit__btn"%>
        <% end %>
      </div>
      <p class="show__text">現場名</p>
      <div class="show__title">
        <%= @post.constructionsite %>
      </div>
      <p class="show__text">作成日</p>
      <div class="show__title">
        <%= @post.created_at %>
      </div>
      <p class="show__text">記入者</p>
      <div class="show__title">
        <%= @post.writer %>
      </div>
      <p class="show__text">業態</p>
      <div class="show__title">
        <%= @post.industrytype %>
      </div>
      <p class="show__text">作業者(メンバー)</p>
      <div class="show__title">
        <%= @post.members %>
      </div>
      <p class="show__text">特記事項</p>
      <div class="show__title">
        <%= simple_format @post.comment %>
      </div>
      <p class="show__text">高速利用/有無</p>
      <div class="show__title">
        <%= @post.highway %>
      </div>
      <p class="show__text">交通費/有無</p>
      <div class="show__title">
        <%= @post.travel_cost %>
      </div>
      <p class="show__text">終了時刻</p>
      <div class="show__title">
        <%= @post.endtime %>
      </div>
      <p class="show__text">残業/有無</p>
      <div class="show__title">
        <%= @post.overwork %>
      </div>
      <div class="content__return">
        <%= link_to "TOPへ", posts_path, class: "content__return__btn"%>
      </div>
    </div>
  </div>
</div>
