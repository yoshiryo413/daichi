<!DOCTYPE html>
<html>
  <head>
    <title>名波工務所</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>


  <body>

<header>
  <div class="header">
    <div class="header__nav">
      <ul>
        <li class="header__name">名波工務所</li>
      </ul>
      <ul class="nav">
      <% if user_signed_in? %> <%# ユーザーかどうか判定 %>
      <%= form_with(url: posts_searches_path , local: true, method: :get, class: "header__from") do |form| %>
        <%= form.text_field :keyword, placeholder: "現場名で検索", class: "header__from__text" %>
        <%= form.submit "検索", class: "header__from__btn" %>
        <% end %>
        <%= link_to current_user.name, user_path(current_user), class: "header__right--btn" %>
        <li><%= link_to "新規投稿",new_post_path , class: "nav__left" %></li>
        <li><%= link_to "ログアウト", destroy_user_session_path, class: "nav__right" %></li>
      <% else %>
        <%= link_to "ログイン", new_user_session_path, class: "nav__left" %>
        <%= link_to "新規登録", new_user_registration_path, class: "nav__right" %>
        <% end %>
      </ul>
    </div>
  </div>
</header>

    <%= yield %>

  </body>



</html>
